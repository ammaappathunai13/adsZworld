<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/ivory"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/mobilesize"
        android:scaleType="fitXY"
        android:alpha=".3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/marque"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:background="@color/gray"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:layout_height="wrap_content" />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_weight=".5"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <TextView
                               android:textColor="@color/green"
                               android:textSize="20dp"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:id="@+id/username_top_account_page"
                               android:layout_width="match_parent"
                               android:text="Hi UserName"
                               android:layout_height="wrap_content" />
                       </RelativeLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_weight=".9"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <Button
                               android:id="@+id/referesh"
                               android:textSize="17dp"
                               android:textStyle="bold"
                               android:layout_width="wrap_content"
                               android:text="REFRESH"
                               android:layout_alignParentRight="true"

                               android:layout_height="wrap_content" />

                       </RelativeLayout>

                   </LinearLayout>
               </LinearLayout>
           </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:background="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:text="User Details"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:padding="12dp"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Username"
                        android:textSize="17dp"
                        android:textStyle="bold"

                        android:id="@+id/username_account_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="USerID"
                        android:layout_marginTop="3dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:id="@+id/userid_Account_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="PhoneNubmer"
                        android:layout_marginTop="3dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:id="@+id/phonenumber_AccountPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>



            </LinearLayout>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/gray"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="Reference Details"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18dp"
                android:id="@+id/register_And_signin"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:text="User help"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/maroon"
                android:layout_height="wrap_content" />
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/reference_code_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"
                                android:text="Activate and get your reference code"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_centerInParent="true"
                                android:id="@+id/activate_reference_id_Account_page"
                                android:text="Activate Account"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_centerInParent="true"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                android:id="@+id/totalreference"
                                android:layout_width="wrap_content"
                                android:text="Toatal Reference"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:background="@color/gray"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Balance Details"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/red"
                            android:text="Earn Rs.200 automatically transfer to bank account"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_centerInParent="true"
                            android:textAlignment="center"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:id="@+id/available_balance_account_page"
                            android:text="avalable balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/gray"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:text="Bank details"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <Button
                      android:textSize="17dp"
                      android:textStyle="bold"
                      android:id="@+id/add_bank_details"
                      android:layout_centerInParent="true"
                      android:visibility="invisible"
                      android:layout_width="wrap_content"
                      android:text="Add bank details"
                      android:layout_gravity="center"
                      android:layout_height="wrap_content" />
                  <Button
                      android:visibility="invisible"
                      android:id="@+id/change_Bank_details"
                      android:layout_width="wrap_content"
                      android:layout_centerInParent="true"
                      android:textStyle="bold"
                      android:text="Change Bank Details"
                      android:gravity="center"
                      android:layout_height="wrap_content" />

              </RelativeLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="invisible"
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:id="@+id/bankname_account_page"
                        android:text="Bank name"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:visibility="invisible"

                        android:layout_width="match_parent"
                        android:id="@+id/account_number_account_page"
                        android:text="Account Number"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"
                        android:visibility="invisible"

                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:id="@+id/account_Holder_name_Account_page"
                        android:text="Account HolderName"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:textSize="17dp"
                        android:visibility="invisible"

                        android:textStyle="bold"
                        android:id="@+id/ifsc_account_page"
                        android:text="IFSC"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/branch_account_page"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="5dp"
                        android:text="Bank name"
                        android:textSize="17dp"

                        android:textStyle="bold"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/SignOut"
                android:layout_width="match_parent"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="SIGN OUT"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>