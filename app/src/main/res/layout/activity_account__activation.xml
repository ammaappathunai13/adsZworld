<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_Activation">

    <ImageView
        android:layout_width="match_parent"
        android:alpha=".4"
        android:src="@drawable/mobilesize"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text="Account Activation"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Your friend Reference id"
                    android:layout_height="wrap_content" />
                <EditText
                    android:maxLength="10"

                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:id="@+id/reference_ID_EDittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reference ID"

                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/no_reference_click_here"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="No Reference ID ! click here to Activate"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/activate_button"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:background="@color/green"
                android:text="ACTIVATE"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:id="@+id/register_And_signin"
                android:layout_width="match_parent"
                android:text="User help"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/maroon"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>